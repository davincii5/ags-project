{% extends 'base.html.twig' %}

{% block body %}
    <div class="mb-4">
        <h2 class="fw-bold text-dark">Gestion des Fournisseurs</h2>
        <p class="text-muted">Gérez vos partenaires et fournisseurs</p>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card p-4 text-white shadow-sm border-0" style="background: #5a4fcf;">
                <small class="text-uppercase fw-bold opacity-75" style="font-size: 0.7rem;">Total Fournisseurs</small>
                <h3 class="fw-bold mb-0">5</h3>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card p-4 text-white shadow-sm border-0" style="background: #4b38b3;">
                <small class="text-uppercase fw-bold opacity-75" style="font-size: 0.7rem;">Fournisseurs Actifs</small>
                <h3 class="fw-bold mb-0">4</h3>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card p-4 text-white shadow-sm border-0" style="background: #6358dc;">
                <small class="text-uppercase fw-bold opacity-75" style="font-size: 0.7rem;">Produits Fournis</small>
                <h3 class="fw-bold mb-0">61</h3>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card p-4 text-white shadow-sm border-0" style="background: #5247cc;">
                <small class="text-uppercase fw-bold opacity-75" style="font-size: 0.7rem;">Commandes Totales</small>
                <h3 class="fw-bold mb-0">176</h3>
            </div>
        </div>
    </div>

    <div class="card p-3 mb-4 border-0 shadow-sm">
        <div class="d-flex justify-content-between align-items-center">
            <div class="input-group w-75 me-3">
                <span class="input-group-text bg-white border-end-0 text-muted"><i class="bi bi-search"></i></span>
                <input type="text" class="form-control border-start-0 ps-0" placeholder="Rechercher un fournisseur...">
            </div>
            <button class="btn btn-primary rounded-pill px-4 fw-bold">
                <i class="bi bi-plus-lg me-2"></i> Ajouter un fournisseur
            </button>
        </div>
    </div>

    <div class="card border-0 shadow-sm overflow-hidden bg-white">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 py-3 text-muted small fw-bold text-uppercase">Nom</th>
                        <th class="py-3 text-muted small fw-bold text-uppercase">Contact</th>
                        <th class="py-3 text-muted small fw-bold text-uppercase">Email</th>
                        <th class="py-3 text-muted small fw-bold text-uppercase">Téléphone</th>
                        <th class="py-3 text-muted small fw-bold text-uppercase text-center">Produits</th>
                        <th class="py-3 text-muted small fw-bold text-uppercase text-center">Commandes</th>
                        <th class="py-3 text-muted small fw-bold text-uppercase">Statut</th>
                        <th class="pe-4 py-3 text-muted small fw-bold text-uppercase text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="ps-4 fw-bold">Apple Inc.</td>
                        <td class="text-muted">Jean Dupont</td>
                        <td><i class="bi bi-envelope me-2 opacity-50"></i>contact@apple.com</td>
                        <td><i class="bi bi-telephone me-2 opacity-50"></i>+33 1 23 45 67 89</td>
                        <td class="text-center">15</td>
                        <td class="text-center">42</td>
                        <td><span class="badge bg-success-subtle text-success px-3 border border-success">Actif</span></td>
                        <td class="pe-4 text-end">
                            <i class="bi bi-pencil text-primary me-2" role="button"></i>
                        </td>
                    </tr>
                    <tr>
                        <td class="ps-4 fw-bold">Samsung</td>
                        <td class="text-muted">Marie Martin</td>
                        <td><i class="bi bi-envelope me-2 opacity-50"></i>contact@samsung.com</td>
                        <td><i class="bi bi-telephone me-2 opacity-50"></i>+33 1 98 76 54 32</td>
                        <td class="text-center">12</td>
                        <td class="text-center">38</td>
                        <td><span class="badge bg-success-subtle text-success px-3 border border-success">Actif</span></td>
                        <td class="pe-4 text-end">
                            <i class="bi bi-pencil text-primary me-2" role="button"></i>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}