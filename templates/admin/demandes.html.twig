{% extends 'base.html.twig' %}

{% block body %}
    <div class="mb-4">
        <h2 class="fw-bold text-dark">Demandes d'Achat</h2>
        <p class="text-muted">Validez les commandes de réapprovisionnement soumises par les managers</p>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card p-4 text-white shadow-sm border-0" style="background: #5a4fcf;">
                <small class="text-uppercase fw-bold opacity-75" style="font-size: 0.7rem;">En attente</small>
                <h3 class="fw-bold mb-0">8</h3>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card p-4 text-white shadow-sm border-0" style="background: #4b38b3;">
                <small class="text-uppercase fw-bold opacity-75" style="font-size: 0.7rem;">Approuvées</small>
                <h3 class="fw-bold mb-0">142</h3>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm overflow-hidden bg-white">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 py-3 text-muted small fw-bold">PRODUIT</th>
                        <th class="py-3 text-muted small fw-bold">QUANTITÉ</th>
                        <th class="py-3 text-muted small fw-bold">URGENCE</th>
                        <th class="pe-4 py-3 text-muted small fw-bold text-end">ACTIONS</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="ps-4">
                            <div class="fw-bold">iPhone 13 Pro</div>
                            <small class="text-muted">Demandé par : Manager_Sud</small>
                        </td>
                        <td><span class="badge bg-primary-subtle text-primary">10 unités</span></td>
                        <td><span class="badge bg-danger text-white px-3">Haute</span></td>
                        <td class="pe-4 text-end">
                            <button class="btn btn-sm btn-success rounded-pill px-3">Approuver</button>
                            <button class="btn btn-sm btn-outline-danger rounded-pill px-3">Refuser</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}