{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<div class="p-6">
    <h1 class="text-2xl font-bold mb-6">{{ title }}</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="bg-white shadow p-4 rounded">
            <h2 class="font-semibold text-gray-700">Total Users</h2>
            <p class="text-3xl font-bold">{{ stats.users_count }}</p>
        </div>
        <div class="bg-white shadow p-4 rounded">
            <h2 class="font-semibold text-gray-700">Products</h2>
            <p class="text-3xl font-bold">{{ stats.products_count }}</p>
        </div>
        <div class="bg-white shadow p-4 rounded">
            <h2 class="font-semibold text-gray-700">Suppliers</h2>
            <p class="text-3xl font-bold">{{ stats.suppliers_count }}</p>
        </div>
        <div class="bg-white shadow p-4 rounded">
            <h2 class="font-semibold text-gray-700">Pending Orders</h2>
            <p class="text-3xl font-bold">{{ stats.pending_orders }}</p>
        </div>
    </div>
</div>
{% endblock %}
