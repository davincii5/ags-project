{% extends 'base.html.twig' %}

{# Correction de l'erreur : On utilise un bloc pour le titre #}
{% block title %}Espace Magasinier - AGS Stock{% endblock %}

{% block body %}
    <div class="mb-4">
        <h2 class="fw-bold text-dark">Espace Magasinier</h2>
        <p class="text-muted">Gérez les flux de marchandises en temps réel</p>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card p-4 text-white shadow-sm border-0" style="background: #5a4fcf;">
                <small class="text-uppercase fw-bold opacity-75" style="font-size: 0.7rem;">Entrées (Aujourd'hui)</small>
                <h3 class="fw-bold mb-0">14</h3>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card p-4 text-white shadow-sm border-0" style="background: #4b38b3;">
                <small class="text-uppercase fw-bold opacity-75" style="font-size: 0.7rem;">Sorties (Aujourd'hui)</small>
                <h3 class="fw-bold mb-0">22</h3>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card p-4 text-white shadow-sm border-0" style="background: #6358dc;">
                <small class="text-uppercase fw-bold opacity-75" style="font-size: 0.7rem;">Alertes Stock</small>
                <h3 class="fw-bold mb-0">5</h3>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-md-6">
            <div class="card p-5 border-0 shadow-sm text-center bg-white h-100">
                <i class="bi bi-box-arrow-in-down text-primary mb-3" style="font-size: 3.5rem;"></i>
                <h4 class="fw-bold">Réception</h4>
                <p class="text-muted">Enregistrer l'arrivée de nouveaux produits</p>
                <button class="btn btn-primary btn-lg rounded-pill px-5 fw-bold mt-2 shadow-sm">
                    <i class="bi bi-plus-circle me-2"></i> Nouvelle Entrée
                </button>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card p-5 border-0 shadow-sm text-center bg-white h-100">
                <i class="bi bi-box-arrow-up text-danger mb-3" style="font-size: 3.5rem;"></i>
                <h4 class="fw-bold">Expédition</h4>
                <p class="text-muted">Enregistrer une sortie de stock / vente</p>
                <button class="btn btn-outline-danger btn-lg rounded-pill px-5 fw-bold mt-2 shadow-sm">
                    <i class="bi bi-dash-circle me-2"></i> Nouvelle Sortie
                </button>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm overflow-hidden bg-white">
        <div class="card-header bg-white py-3">
            <h6 class="fw-bold mb-0 text-muted">Mes 5 dernières opérations</h6>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-uppercase">
                    <tr>
                        <th class="ps-4 py-3 small fw-bold">Heure</th>
                        <th class="py-3 small fw-bold">Produit</th>
                        <th class="py-3 small fw-bold">Type</th>
                        <th class="pe-4 py-3 small fw-bold text-end">Quantité</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="ps-4 text-muted small">10:45</td>
                        <td class="fw-bold">iPhone 13 Pro</td>
                        <td><span class="badge bg-success-subtle text-success">Entrée</span></td>
                        <td class="pe-4 text-end fw-bold">+10</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}