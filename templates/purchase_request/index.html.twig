{% extends 'base.html.twig' %}

{% block title %}Liste des Demandes d'Achat{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>üì¶ Gestion des Demandes d'Achat</h1>
            {% if is_granted('ROLE_MANAGER') or is_granted('ROLE_ADMIN') %}
                <a href="{{ path('app_purchase_request_new') }}" class="btn btn-primary">
                    + Nouvelle Demande
                </a>
            {% endif %}
        </div>

        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Produit</th>
                    <th>Quantit√©</th>
                    <th>Statut</th>
                    <th>Justification</th>
                    <th>Demand√© par</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for purchase_request in purchase_requests %}
                <tr>
                    <td>{{ purchase_request.id }}</td>
                    
                    {# 1. Affichage du Nom du Produit #}
                    <td>
                        <strong>{{ purchase_request.product.name }}</strong>
                        <br>
                        <small class="text-muted">{{ purchase_request.product.reference }}</small>
                    </td>

                    <td>{{ purchase_request.quantity }}</td>

                    {# 2. Badges de couleur pour le statut #}
                    <td>
                        {% if purchase_request.status == 'approved' %}
                            <span class="badge bg-success">Valid√©e</span>
                        {% elseif purchase_request.status == 'rejected' %}
                            <span class="badge bg-danger">Refus√©e</span>
                        {% else %}
                            <span class="badge bg-warning text-dark">En attente</span>
                        {% endif %}
                    </td>

                    <td>{{ purchase_request.justification }}</td>
                    
                    {# 3. Qui a fait la demande ? #}
                    <td>{{ purchase_request.requestedBy.email }}</td>
                    
                    <td>{{ purchase_request.createdAt ? purchase_request.createdAt|date('d/m/Y H:i') : '' }}</td>
                    
                    <td>
                        {# Bouton Voir (Pour tous) #}
                        <a href="{{ path('app_purchase_request_show', {'id': purchase_request.id}) }}" class="btn btn-info btn-sm text-white">Voir</a>

                        {# 4. ZONE ADMIN : Boutons de validation #}
                        {# Visibles SEULEMENT si Admin ET statut 'pending' #}
                        {% if is_granted('ROLE_ADMIN') and purchase_request.status == 'pending' %}
                            
                            <hr class="my-1"> <form method="post" action="{{ path('app_purchase_request_approve', {'id': purchase_request.id}) }}" onsubmit="return confirm('Valider cet achat et augmenter le stock ?');" style="display: inline-block;">
                                <input type="hidden" name="_token" value="{{ csrf_token('approve' ~ purchase_request.id) }}">
                                <button class="btn btn-success btn-sm">Valider</button>
                            </form>

                            <form method="post" action="{{ path('app_purchase_request_reject', {'id': purchase_request.id}) }}" onsubmit="return confirm('Refuser cette demande ?');" style="display: inline-block;">
                                <input type="hidden" name="_token" value="{{ csrf_token('reject' ~ purchase_request.id) }}">
                                <button class="btn btn-danger btn-sm">Refuser</button>
                            </form>

                        {% endif %}

                        {# Bouton Modifier (Seulement si c'est MA demande ou si je suis Admin) #}
                        {% if is_granted('ROLE_ADMIN') or app.user == purchase_request.requestedBy %}
                             {% if purchase_request.status == 'pending' %}
                                <a href="{{ path('app_purchase_request_edit', {'id': purchase_request.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                             {% endif %}
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8" class="text-center">Aucune demande d'achat enregistr√©e.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}