{% extends 'base.html.twig' %}

{% block title %}PurchaseRequest index{% endblock %}

{% block body %}
    <h1>PurchaseRequest index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Quantity</th>
                <th>Status</th>
                <th>Justification</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for purchase_request in purchase_requests %}
            <tr>
                <td>{{ purchase_request.id }}</td>
                <td>{{ purchase_request.quantity }}</td>
                <td>{{ purchase_request.status }}</td>
                <td>{{ purchase_request.justification }}</td>
                <td>{{ purchase_request.createdAt ? purchase_request.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_purchase_request_show', {'id': purchase_request.id}) }}">show</a>
                    <a href="{{ path('app_purchase_request_edit', {'id': purchase_request.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_purchase_request_new') }}">Create new</a>
{% endblock %}
