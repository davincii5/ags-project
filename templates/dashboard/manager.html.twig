{% extends 'base.html.twig' %}

{% block title %}Espace Manager - AGS Stock{% endblock %}

{% block body %}
    <div class="mb-4">
        <h2 class="fw-bold text-dark">Tableau de Bord Manager</h2>
        <p class="text-muted">Supervision des stocks et gestion des réapprovisionnements</p>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card p-4 text-white shadow-sm border-0" style="background: #5a4fcf;">
                <small class="text-uppercase fw-bold opacity-75" style="font-size: 0.7rem;">Produits en Alerte</small>
                <h3 class="fw-bold mb-0">12</h3>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card p-4 text-white shadow-sm border-0" style="background: #4b38b3;">
                <small class="text-uppercase fw-bold opacity-75" style="font-size: 0.7rem;">Demandes en attente</small>
                <h3 class="fw-bold mb-0">8</h3>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card p-4 text-white shadow-sm border-0" style="background: #6358dc;">
                <small class="text-uppercase fw-bold opacity-75" style="font-size: 0.7rem;">Livraisons attendues</small>
                <h3 class="fw-bold mb-0">3</h3>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm bg-white h-100">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center border-0">
                    <h6 class="fw-bold mb-0 text-danger"><i class="bi bi-exclamation-triangle me-2"></i>Produits sous le seuil critique</h6>
                    <button class="btn btn-sm btn-primary rounded-pill">Tout réapprovisionner</button>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="ps-4 py-3 small fw-bold">PRODUIT</th>
                                <th class="py-3 small fw-bold">STOCK ACTUEL</th>
                                <th class="py-3 small fw-bold">SEUIL MIN</th>
                                <th class="pe-4 py-3 small fw-bold text-end">ACTION</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="ps-4">
                                    <div class="fw-bold">iPhone 13 Pro</div>
                                    <small class="text-muted">Réf: IPH-13-PRO</small>
                                </td>
                                <td><span class="text-danger fw-bold">2</span></td>
                                <td>10</td>
                                <td class="pe-4 text-end">
                                    <button class="btn btn-sm btn-outline-primary py-1 px-3 rounded-pill">Créer demande</button>
                                </td>
                            </tr>
                            <tr>
                                <td class="ps-4">
                                    <div class="fw-bold">Nintendo Switch</div>
                                    <small class="text-muted">Réf: GME-001</small>
                                </td>
                                <td><span class="text-warning fw-bold">5</span></td>
                                <td>5</td>
                                <td class="pe-4 text-end">
                                    <button class="btn btn-sm btn-outline-primary py-1 px-3 rounded-pill">Créer demande</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-0 shadow-sm bg-white h-100">
                <div class="card-header bg-white py-3 border-0">
                    <h6 class="fw-bold mb-0">Suivi des Demandes d'Achat</h6>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-start mb-4">
                        <div class="bg-success-subtle p-2 rounded-3 me-3 text-success"><i class="bi bi-check2-circle fs-4"></i></div>
                        <div>
                            <div class="fw-bold small">Demande #442 validée</div>
                            <small class="text-muted">Par l'Admin - Il y a 1h</small>
                        </div>
                    </div>
                    <div class="d-flex align-items-start mb-4">
                        <div class="bg-warning-subtle p-2 rounded-3 me-3 text-warning"><i class="bi bi-hourglass-split fs-4"></i></div>
                        <div>
                            <div class="fw-bold small">Demande #445 en attente</div>
                            <small class="text-muted">Stock iPhone 13 Pro</small>
                        </div>
                    </div>
                    <div class="d-flex align-items-start">
                        <div class="bg-danger-subtle p-2 rounded-3 me-3 text-danger"><i class="bi bi-x-circle fs-4"></i></div>
                        <div>
                            <div class="fw-bold small">Demande #439 refusée</div>
                            <small class="text-muted">Motif : Budget dépassé</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}