{% extends 'base.html.twig' %}

{% block title %}Tableau de Bord Administrateur{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">üìä Tableau de Bord D√©cisionnel</h1>

    {# === SECTION 1 : LES CHIFFRES CL√âS (KPIS) === #}
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-white bg-danger mb-3">
                <div class="card-header">‚ö†Ô∏è Ruptures potentielles</div>
                <div class="card-body">
                    <h2 class="card-title">{{ low_stock_products|length }}</h2>
                    <p class="card-text">Produits sous le seuil d'alerte.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-white bg-warning mb-3">
                <div class="card-header">‚è≥ Demandes en attente</div>
                <div class="card-body">
                    <h2 class="card-title">{{ pending_count }}</h2>
                    <p class="card-text">Demandes √† valider.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-white bg-success mb-3">
                <div class="card-header">üí∞ Valeur du Stock</div>
                <div class="card-body">
                    <h2 class="card-title">{{ total_stock_value|number_format(2, ',', ' ') }} MAD</h2>
                    <p class="card-text">Valeur d'achat totale.</p>
                </div>
            </div>
        </div>
    </div>

    {# === SECTION 2 : AIDE A LA D√âCISION (TABLEAU) === #}
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <strong>üö® Produits √† commander d'urgence</strong>
                </div>
                <div class="card-body p-0">
                    <table class="table table-striped mb-0">
                        <thead>
                            <tr>
                                <th>Produit</th>
                                <th>R√©f√©rence</th>
                                <th>Stock Actuel</th>
                                <th>Seuil Alerte</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for p in low_stock_products %}
                            <tr>
                                <td>{{ p.name }}</td>
                                <td>{{ p.reference }}</td>
                                <td class="fw-bold text-danger">{{ p.quantity }}</td>
                                <td>{{ p.alertThreshold }}</td>
                                <td>
                                    <a href="{{ path('app_purchase_request_new') }}" class="btn btn-sm btn-outline-danger">Commander</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="text-center py-3">‚úÖ Aucun stock critique. Tout va bien.</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header">
                    Derni√®res valid√©es
                </div>
                <ul class="list-group list-group-flush">
                {% for req in last_approved %}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        {{ req.product.name }}
                        <span class="badge bg-success rounded-pill">+{{ req.quantity }}</span>
                    </li>
                {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</div>
{% endblock %}